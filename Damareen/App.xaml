<Application x:Class="Damareen.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Damareen"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Color x:Key="SoulsBlack">#050505</Color>
        <Color x:Key="SoulsDarkGray">#111111</Color>
        <Color x:Key="SoulsGold">#C5A059</Color>
        <Color x:Key="SoulsBlood">#8a0303</Color>

        <Style TargetType="{x:Type Label}">
            <Setter Property="FontFamily" Value="/Damareen;component/Fonts/MedievalSharp.ttf#MedievalSharp"/>
            <Setter Property="Foreground" Value="#A8A8A8"/>
        </Style>

        <Style TargetType="{x:Type Button}">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontFamily" Value="/Damareen;component/Fonts/MedievalSharp.ttf#MedievalSharp"/>
            <Setter Property="Foreground" Value="#888888"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#C5A059"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="#C5A059" BlurRadius="20" ShadowDepth="0" Opacity="0.6"/>
                        </Setter.Value>
                    </Setter>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="EditorListButton" TargetType="{x:Type Button}" BasedOn="{StaticResource {x:Type Button}}">
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Foreground" Value="#999"/>
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border x:Name="border" Background="Transparent" BorderBrush="#222" BorderThickness="0,0,0,1">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1a1a1a"/>
                                <Setter Property="Foreground" Value="#C5A059"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="{x:Type ScrollBar}">
            <Setter Property="Background" Value="#050505"/>
            <Setter Property="Foreground" Value="#333333"/>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Background" Value="#111"/>
            <Setter Property="Foreground" Value="#ddd"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="Foreground" Value="#aaa"/>
            <Setter Property="FontFamily" Value="/Damareen;component/Fonts/MedievalSharp.ttf#MedievalSharp"/>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Background" Value="#111"/>
            <Setter Property="Foreground" Value="#ddd"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="5"/>
        </Style>

        <Style TargetType="ComboBoxItem">
            <Setter Property="Foreground" Value="Black"/>
        </Style>

        <Style TargetType="RadioButton">
            <Setter Property="Foreground" Value="#ddd"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="0,0,20,0"/>
        </Style>

    </Application.Resources>
</Application>