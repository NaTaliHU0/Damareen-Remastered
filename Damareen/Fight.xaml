<Window x:Class="Damareen.Fight"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Damareen"
        mc:Ignorable="d"
        Title="Damareen - Konfliktus" 
        WindowState="Maximized"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Background="#000000">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                <GradientStop Color="#000000" Offset="0"/>
                <GradientStop Color="#0a0a0a" Offset="0.3"/>
                <GradientStop Color="#1a0505" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <Border Background="Transparent" Margin="0">
            <Grid Margin="40">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" HorizontalAlignment="Center" Margin="0,0,0,40">
                    <TextBlock x:Name="KazamataNev"
                           Text="A KONFLIKTUS KEZDETE" 
                           FontSize="50" 
                           FontFamily="/Damareen;component/Fonts/MedievalSharp.ttf#MedievalSharp"
                           FontWeight="Light"
                           Foreground="#8a0303"
                           HorizontalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#8a0303" BlurRadius="40" ShadowDepth="0" Opacity="0.6"/>
                        </TextBlock.Effect>
                    </TextBlock>
                    <Separator Width="400" Background="#333" Margin="0,10,0,0"/>
                </StackPanel>

                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"/>
                        <ColumnDefinition Width="1.2*"/>
                    </Grid.ColumnDefinitions>

                    <Grid Grid.Column="0" Margin="0,0,40,0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="*"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>

                        <Border Grid.Row="0" 
                                Background="#050505" 
                                BorderBrush="#222"
                                BorderThickness="1"
                                CornerRadius="2"
                                Padding="20">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="10"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" 
                                           Text="KAZAMATA PAKLIJA" 
                                           FontSize="24" 
                                           FontFamily="/Damareen;component/Fonts/MedievalSharp.ttf#MedievalSharp"
                                           Foreground="#555"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,20"/>

                                <Viewbox Grid.Row="1" Stretch="Uniform">
                                    <StackPanel x:Name="KazamataKartyak" 
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                                </Viewbox>
                            </Grid>
                        </Border>

                        <Grid Grid.Row="1" Height="80">
                            <Viewbox Width="60" Height="60">
                                <TextBlock Text="⚔" 
                                           FontSize="48" 
                                           Foreground="#333"
                                           HorizontalAlignment="Center" 
                                           VerticalAlignment="Center">
                                    <TextBlock.Effect>
                                        <DropShadowEffect Color="#C5A059" BlurRadius="10" ShadowDepth="0" Opacity="0.2"/>
                                    </TextBlock.Effect>
                                </TextBlock>
                            </Viewbox>
                        </Grid>

                        <Border Grid.Row="2" 
                                Background="#050505" 
                                BorderBrush="#222"
                                BorderThickness="1"
                                CornerRadius="2"
                                Padding="20">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="20" ShadowDepth="10"/>
                            </Border.Effect>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" 
                                           Text="JÁTÉKOS KÁTYÁK" 
                                           FontSize="24" 
                                           FontFamily="/Damareen;component/Fonts/MedievalSharp.ttf#MedievalSharp"
                                           Foreground="#C5A059"
                                           HorizontalAlignment="Center"
                                           Margin="0,0,0,20"/>

                                <Viewbox Grid.Row="1" Stretch="Uniform">
                                    <StackPanel x:Name="JatekosKartyak" 
                                                Orientation="Horizontal"
                                                HorizontalAlignment="Center"
                                                VerticalAlignment="Center"/>
                                </Viewbox>
                            </Grid>
                        </Border>
                    </Grid>

                    <Border Grid.Column="1" 
                            Background="#080808" 
                            BorderBrush="#333"
                            BorderThickness="2"
                            Padding="20"
                            Margin="0">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="40" ShadowDepth="5"/>
                        </Border.Effect>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/>
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" 
                                       Text="TÖRTÉNÉSEK" 
                                       FontSize="22" 
                                       FontFamily="/Damareen;component/Fonts/MedievalSharp.ttf#MedievalSharp"
                                       Foreground="#A8A8A8"
                                       HorizontalAlignment="Center"
                                       Margin="0,0,0,20">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="5" ShadowDepth="2" Opacity="0.8"/>
                                </TextBlock.Effect>
                            </TextBlock>

                            <Border Grid.Row="1" 
                                    Background="#000000" 
                                    BorderBrush="#151515"
                                    BorderThickness="1"
                                    Padding="15">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Hidden">
                                    <TextBlock x:Name="Status" 
                                               TextWrapping="Wrap"
                                               FontFamily="/Damareen;component/Fonts/MedievalSharp.ttf#MedievalSharp" 
                                               FontSize="20" 
                                               Foreground="#777"
                                               LineHeight="24"
                                               Padding="5"/>
                                </ScrollViewer>
                            </Border>
                        </Grid>
                    </Border>
                </Grid>

                <Border Grid.Row="2" 
                        Background="Transparent" 
                        Width="350" 
                        Height="60"
                        Margin="0,40,0,0">
                    <Button Content="HARC VÉGE" 
                            FontSize="30" 
                            Background="Transparent"
                            Foreground="#555" 
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="BackButton_Click">
                    </Button>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Window>